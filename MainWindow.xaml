                FontSize="11px"
                Foreground="PeachPuff" />
            <TextBox
                x:Name="ScoreTextBox"
                Width="138"
                Height="18"
                Margin="269,132,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                x:FieldModifier="public"
                Background="Transparent"
                BorderBrush="PeachPuff"
                CaretBrush="PeachPuff"
                Cursor="IBeam"
                Foreground="PeachPuff"
                IsEnabled="False"
                Text="419500"
                TextWrapping="NoWrap" />
            <Label
                Width="101"
                Height="24"
                Margin="269,104,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Content="Score"
                FontSize="11px"
                Foreground="PeachPuff" />
        </Grid>
        <Button
            x:Name="CloseButton"
            Width="61"
            Height="62"
            Margin="559,0,0,0"
            VerticalAlignment="Top"
            Click="CloseButton_Click"
            Content="&#xE894;"
            Cursor="Hand"
            FontFamily="Segoe MDL2 Assets"
            Foreground="PeachPuff"
            Template="{StaticResource CloseButton}" />
        <Button
            x:Name="MinimizeButton"
            Width="61"
            Height="62"
            Margin="500,0,59,0"
            VerticalAlignment="Top"
            Click="MinimizeButton_Click"
            Content="&#xE738;"
            Cursor="Hand"
            FontFamily="Segoe MDL2 Assets"
            Foreground="PeachPuff"
            Template="{StaticResource MinimizeButton}" />
    </Grid>
</Window>