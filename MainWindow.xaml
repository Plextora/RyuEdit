<Window x:Class="RyuEdit.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        Title="Ryu Edit" Height="420" Width="620">
    <!-- region Control Templates -->
    <Window.Resources>
        <ControlTemplate TargetType="Button" x:Key="DefaultButton">
            <Border Name="RootElement" BorderThickness="1">

                <Grid>
                    <Grid.Background>
                        <SolidColorBrush x:Name="ButtonBackground" Color="#202020" />
                    </Grid.Background>
                    <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                      VerticalAlignment="{TemplateBinding VerticalContentAlignment}" Margin="4,5,4,4" />
                </Grid>
                <VisualStateManager.VisualStateGroups>
                    <VisualStateGroup x:Name="CommonStates">
                        <VisualState x:Name="Normal">
                            <Storyboard>
                                <ColorAnimation Storyboard.TargetName="ButtonBackground"
                                                Storyboard.TargetProperty="Color" To="#202020" SpeedRatio="8" />
                            </Storyboard>
                        </VisualState>
                        <VisualState x:Name="MouseOver">
                            <Storyboard>
                                <ColorAnimation Storyboard.TargetName="ButtonBackground"
                                                Storyboard.TargetProperty="Color" To="#303030" SpeedRatio="8" />
                            </Storyboard>
                        </VisualState>
                        <VisualState x:Name="Pressed">
                            <Storyboard>
                                <ColorAnimation Storyboard.TargetName="ButtonBackground"
                                                Storyboard.TargetProperty="Color" To="#404040" SpeedRatio="8" />
                            </Storyboard>
                        </VisualState>
                    </VisualStateGroup>
                </VisualStateManager.VisualStateGroups>
            </Border>
        </ControlTemplate>

        <ControlTemplate TargetType="Button" x:Key="CloseButton">
            <Border Name="RootElement" BorderThickness="1">

                <Grid>
                    <Grid.Background>
                        <SolidColorBrush x:Name="ButtonBackground" Color="#191919" />
                    </Grid.Background>
                    <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                      VerticalAlignment="{TemplateBinding VerticalContentAlignment}" Margin="4,5,4,4" />
                </Grid>
                <VisualStateManager.VisualStateGroups>
                    <VisualStateGroup x:Name="CommonStates">
                        <VisualState x:Name="Normal">
                            <Storyboard>
                                <ColorAnimation Storyboard.TargetName="ButtonBackground"
                                                Storyboard.TargetProperty="Color" To="#191919" SpeedRatio="8" />
                            </Storyboard>
                        </VisualState>
                        <VisualState x:Name="MouseOver">
                            <Storyboard>
                                <ColorAnimation Storyboard.TargetName="ButtonBackground"
                                                Storyboard.TargetProperty="Color" To="#f7c1c1" SpeedRatio="8" />
                            </Storyboard>
                        </VisualState>
                        <VisualState x:Name="Pressed">
                            <Storyboard>
                                <ColorAnimation Storyboard.TargetName="ButtonBackground"
                                                Storyboard.TargetProperty="Color" To="#ffabab" SpeedRatio="8" />
                            </Storyboard>
                        </VisualState>
                    </VisualStateGroup>
                </VisualStateManager.VisualStateGroups>
            </Border>
        </ControlTemplate>

        <ControlTemplate TargetType="Button" x:Key="MinimizeButton">
            <Border Name="RootElement" BorderThickness="1">

                <Grid>
                    <Grid.Background>
                        <SolidColorBrush x:Name="ButtonBackground" Color="#191919" />
                    </Grid.Background>
                    <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                      VerticalAlignment="{TemplateBinding VerticalContentAlignment}" Margin="4,5,4,4" />
                </Grid>
                <VisualStateManager.VisualStateGroups>
                    <VisualStateGroup x:Name="CommonStates">
                        <VisualState x:Name="Normal">
                            <Storyboard>
                                <ColorAnimation Storyboard.TargetName="ButtonBackground"
                                                Storyboard.TargetProperty="Color" To="#191919" SpeedRatio="8" />
                            </Storyboard>
                        </VisualState>
                        <VisualState x:Name="MouseOver">
                            <Storyboard>
                                <ColorAnimation Storyboard.TargetName="ButtonBackground"
                                                Storyboard.TargetProperty="Color" To="#83c8fc" SpeedRatio="8" />
                            </Storyboard>
                        </VisualState>
                        <VisualState x:Name="Pressed">
                            <Storyboard>
                                <ColorAnimation Storyboard.TargetName="ButtonBackground"
                                                Storyboard.TargetProperty="Color" To="#c0e2fc" SpeedRatio="8" />
                            </Storyboard>
                        </VisualState>
                    </VisualStateGroup>
                </VisualStateManager.VisualStateGroups>
            </Border>
        </ControlTemplate>
    </Window.Resources>
    <!-- endregion -->
    <Grid x:Name="MainGrid" Background="#FF181818">
        <Grid
            Panel.ZIndex="-1">
            <Rectangle
                x:Name="WindowToolbar"
                HorizontalAlignment="Center"
                Height="62"
                Width="620"
                Fill="#161616"
                Stroke="PeachPuff"
                StrokeThickness="0.5"
                VerticalAlignment="Top"
                MouseLeftButtonDown="WindowToolbar_MouseLeftButtonDown" />
            <Label
                x:Name="TitleLabel"
                Content="Ryu Edit"
                Foreground="PeachPuff"
                FontFamily="Segoe UI Light"
                HorizontalAlignment="Left"
                Margin="10,10,0,0"
                VerticalAlignment="Top"
                FontSize="25" />
            <Label
                x:Name="StatusLabel"
                Content="Status: Idle"
                Foreground="PeachPuff"
                FontFamily="Segoe UI Light"
                HorizontalAlignment="Left"
                Margin="10,380,0,0"
                VerticalAlignment="Top"
                FontSize="15" />
            <Label
                Content="Replay username"
                Foreground="PeachPuff"
                HorizontalAlignment="Left"
                Margin="7,116,0,0"
                VerticalAlignment="Top" />
            <TextBox
                x:Name="ReplayUsernameTextbox"
                HorizontalAlignment="Left"
                Margin="10,147,0,0"
                TextWrapping="NoWrap"
                Text="Pippi_osu"
                Cursor="IBeam"
                VerticalAlignment="Top"
                Width="140"
                Background="Transparent"
                Foreground="PeachPuff"
                BorderBrush="PeachPuff" />
            <Button
                x:Name="OpenReplayButton"
                Content="Open Replay"
                Foreground="PeachPuff"
                FontFamily="Segoe UI Semilight"
                FontSize="17px"
                Template="{StaticResource DefaultButton}"
                Height="38"
                Margin="181,67,315,0"
                VerticalAlignment="Top"
                Click="OpenReplayButton_Click" />
            <Button
                x:Name="SaveReplayButton"
                Content="Save Replay"
                Foreground="PeachPuff"
                FontFamily="Segoe UI Semilight"
                FontSize="17px"
                Template="{StaticResource DefaultButton}"
                Height="38"
                Margin="310,67,186,0"
                VerticalAlignment="Top"
                Click="SaveReplayButton_Click"/>
            <TextBox
                x:Name="ComboTextbox"
                HorizontalAlignment="Left"
                Margin="155,147,0,0"
                TextWrapping="NoWrap"
                Text="0"
                Cursor="IBeam"
                VerticalAlignment="Top"
                Width="140"
                Background="Transparent"
                Foreground="PeachPuff"
                BorderBrush="PeachPuff" />
            <Label
                Content="Combo"
                Foreground="PeachPuff"
                HorizontalAlignment="Left"
                Margin="155,116,0,0"
                VerticalAlignment="Top" />
        </Grid>
        <Button
            x:Name="CloseButton"
            Content="&#xE894;"
            Foreground="PeachPuff"
            FontFamily="Segoe MDL2 Assets"
            Template="{StaticResource CloseButton}"
            Height="62"
            Width="61"
            Margin="559,0,0,0"
            VerticalAlignment="Top"
            Click="CloseButton_Click" />
        <Button
            x:Name="MinimizeButton"
            Content="&#xE738;"
            Foreground="PeachPuff"
            FontFamily="Segoe MDL2 Assets"
            Template="{StaticResource MinimizeButton}"
            Height="62"
            Width="61"
            Margin="500,0,59,0"
            VerticalAlignment="Top"
            Click="MinimizeButton_Click" />
    </Grid>
</Window>