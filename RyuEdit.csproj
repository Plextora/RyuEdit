<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <OutputType>WinExe</OutputType>
        <TargetFramework>net7.0-windows</TargetFramework>
        <Nullable>enable</Nullable>
        <UseWPF>true</UseWPF>
        <AssemblyVersion>1.5.4.2</AssemblyVersion>
        <FileVersion>1.5.4.2</FileVersion>
        <NeutralLanguage>en</NeutralLanguage>
        <Company>Plextora</Company>
        <Product>Ryu Edit</Product>
        <Description>An app made in C# for modifying the metadata of osu! replays </Description>
        <ApplicationIcon>Ryu Edit Icon.ico</ApplicationIcon>
    </PropertyGroup>

    <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
      <Optimize>True</Optimize>
    </PropertyGroup>

    <ItemGroup>
      <Content Include="Ryu Edit Icon.ico" />
    </ItemGroup>

    <ItemGroup>
      <PackageReference Include="OsuParsers" Version="1.7.1" />
    </ItemGroup>

</Project>
